<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eaeaea">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/btn_gray_pressed"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <ImageView
            android:id="@+id/amyinfo_img_backupa"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back01"
            android:layout_width="60dp"
            android:layout_height="25dp" />
        <TextView
            android:text="修改个人信息"
            android:textSize="20dp"
            android:textColor="#fffff1"
            android:layout_gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/updatemyinfo_et_updateinfo"
            android:text="保存"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:textColor="#fffff1"
            android:layout_marginRight="4dp"
            android:layout_width="60dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <ScrollView
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 全圆角-->
            <LinearLayout

                android:orientation="horizontal"
                style="@style/wrap_layout"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/updatemyinfo_tv_accountupa"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>


            <LinearLayout
                style="@style/wrap_layout" >
                <!-- 上圆角-->
                <LinearLayout
                    style="@style/top_layout">
                    <TextView style="@style/usertext"
                        android:textColor="@color/gray"
                        android:text="姓名" />
                    <TextView style="@style/usertext"
                        android:id="@+id/updatemyinfo_tv_name"
                        android:gravity="right"
                        />
                </LinearLayout>
                <View style="@style/bg_line"/>
                <!-- 下圆角-->
                <LinearLayout
                    style="@style/bottom_layout">
                    <TextView
                        style="@style/usertext"
                        android:textColor="@color/gray"
                        android:text="昵称" />
                    <EditText
                        style="@style/usertext"
                        android:background="@drawable/edittext_back"
                        android:id="@+id/updatemyinfo_et_nickname"
                        android:gravity="right"
                        android:hint="昵称" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                style="@style/wrap_layout" >
                <!-- 上圆角-->
                <LinearLayout
                    style="@style/top_layout">
                    <TextView style="@style/usertext"
                        android:textColor="@color/gray"
                        android:text="年龄" />
                    <EditText
                        style="@style/usertext"
                        android:background="@drawable/edittext_back"
                        android:id="@+id/updatemyinfo_et_age"
                        android:gravity="right"
                        android:hint="年龄" />
                </LinearLayout>
                <View style="@style/bg_line"/>
                <!-- 下圆角-->
                <LinearLayout
                    style="@style/bottom_layout">
                    <TextView
                        style="@style/usertext"
                        android:textColor="@color/gray"
                        android:text="性别" />
                    <TextView
                        style="@style/usertext"
                        android:id="@+id/updatemyinfo_tv_gender"
                        android:gravity="right"
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                style="@style/wrap_layout" >
                <!-- 上圆角-->
                <LinearLayout style="@style/top_layout">
                    <TextView
                        style="@style/usertext"
                        android:text="生日"
                        android:textColor="@color/gray" />
                    <TextView
                        style="@style/usertext"
                        android:background="@drawable/edittext_back"
                        android:id="@+id/updatemyinfo_et_birthday"
                        android:gravity="right"
                        android:hint="生日" />
                </LinearLayout>

                <View style="@style/bg_line"/>
                <!-- 下圆角-->
                <LinearLayout
                    style="@style/bottom_layout">
                    <TextView
                        style="@style/usertext"
                        android:textColor="@color/gray"
                        android:text="星座" />
                    <EditText
                        style="@style/usertext"
                        android:background="@drawable/edittext_back"
                        android:id="@+id/updatemyinfo_et_xingZuo"
                        android:gravity="right"
                        android:hint="星座" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/wrap_layout" >
                <!-- 上圆角-->
                <LinearLayout
                    style="@style/top_layout">
                    <TextView style="@style/usertext"
                        android:textColor="@color/gray"
                        android:text="身高" />
                    <EditText
                        style="@style/usertext"
                        android:background="@drawable/edittext_back"
                        android:id="@+id/updatemyinfo_et_height"
                        android:gravity="right"
                        android:hint="身高" />
                        />
                </LinearLayout>
                <View style="@style/bg_line"/>
                <!-- 下圆角-->
                <LinearLayout
                    style="@style/bottom_layout">
                    <TextView
                        style="@style/usertext"
                        android:textColor="@color/gray"
                        android:text="体重" />
                    <EditText
                        style="@style/usertext"
                        android:background="@drawable/edittext_back"
                        android:id="@+id/updatemyinfo_et_weight"
                        android:gravity="right"
                        android:hint="体重" />
                    />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                style="@style/wrap_layout" >
                <!-- 上圆角-->
                <LinearLayout
                    style="@style/top_layout">
                    <TextView style="@style/usertext"
                        android:textColor="@color/gray"
                        android:text="手机" />
                    <TextView style="@style/usertext"
                        android:id="@+id/updatemyinfo_tv_phone"
                        android:gravity="right"
                        />
                </LinearLayout>
                <View style="@style/bg_line"/>
                <!-- 下圆角-->
                <LinearLayout
                    style="@style/bottom_layout">
                    <TextView
                        style="@style/usertext"
                        android:textColor="@color/gray"
                        android:text="住址" />
                    <EditText
                        style="@style/usertext"
                        android:background="@drawable/edittext_back"
                        android:id="@+id/updatemyinfo_et_address"
                        android:gravity="right"
                        android:hint="住址" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/wrap_layout" >
                <!-- 上圆角-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/top_layout">
                    <TextView style="@style/usertext"
                        android:textColor="@color/gray"
                        android:text="职业" />
                    <EditText
                        style="@style/usertext"
                        android:background="@drawable/edittext_back"
                        android:id="@+id/updatemyinfo_et_job"
                        android:gravity="right"
                        android:hint="职业" />
                </LinearLayout>
                <View style="@style/bg_line"/>
                <!-- 下圆角-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/bottom_layout">
                    <TextView
                        style="@style/usertext"
                        android:text="爱好"
                        android:textColor="@color/gray" />
                    <EditText
                        style="@style/usertext"
                        android:background="@drawable/edittext_back"
                        android:id="@+id/updatemyinfo_et_habit"
                        android:gravity="right"
                        android:hint="爱好" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/wrap_layout" >
                <!-- 上圆角-->
                <LinearLayout style="@style/top_layout">

                    <TextView
                        style="@style/usertext"
                        android:textColor="@color/gray"
                        android:text="个人签名" />
                    <EditText
                        style="@style/usertext"
                        android:background="@drawable/edittext_back"
                        android:id="@+id/updatemyinfo_et_signature"
                        android:gravity="right"
                        android:hint="个人签名" />
                </LinearLayout>

                <!-- 下圆角-->
                <LinearLayout
                    style="@style/bottom_layout">
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>