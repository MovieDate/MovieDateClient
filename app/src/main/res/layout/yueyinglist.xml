<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher_round"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/yueyinglist_tv_nickname"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_height="20dp"
            android:editable="false"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/yueyinglist_tv_gender"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_height="20dp"
            android:gravity="left"/>

    </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/yueyinglist_tv_movieName"
        android:singleLine="false"
        android:layout_width="130dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:padding="25dp"/>

    <TextView
        android:id="@+id/yueyinglist_tv_site"
        android:singleLine="false"
        android:layout_width="130dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15dp"
        android:padding="25dp" />


    <TextView
        android:id="@+id/yueyinglist_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/yueyinglist_tv_movieName"
        android:visibility="gone"
         />
    </LinearLayout>
    <TextView
        android:id="@+id/yueyinglist_tv_postTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:gravity="right"
        />
</LinearLayout>
    </LinearLayout>

</RelativeLayout>