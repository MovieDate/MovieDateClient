<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#eaeaea">

        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/btn_gray_pressed"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <ImageView
                android:id="@+id/allperson_img_back"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back01"
                android:layout_width="60dp"
                android:layout_height="25dp" />
            <TextView
                android:text="个人信息"
                android:textSize="20dp"
                android:textColor="#fffff1"
                android:layout_gravity="center_vertical"
                android:layout_centerHorizontal="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/allperson_tv_add"
                android:text="添加"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                android:layout_marginRight="5dp"
                android:textColor="#fffff1"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:visibility="invisible"/>

        </LinearLayout>
        <ScrollView
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 全圆角-->
                <LinearLayout

                    android:orientation="horizontal"
                    style="@style/wrap_layout"
                    android:layout_height="60dp">
                    <TextView
                        android:id="@+id/allperson_tv_account"
                        android:textSize="19sp"
                        android:gravity="center"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </LinearLayout>


                <LinearLayout
                    style="@style/wrap_layout" >
                    <!-- 上圆角-->
                    <LinearLayout
                        style="@style/top_layout">
                        <TextView style="@style/usertext"
                            android:textColor="@color/gray"
                            android:text="姓名" />
                        <TextView style="@style/usertext"
                            android:id="@+id/allperson_tv_name"
                            android:gravity="right"
                            />
                    </LinearLayout>
                    <View style="@style/bg_line"/>
                    <!-- 下圆角-->
                    <LinearLayout
                        style="@style/bottom_layout">
                        <TextView
                            style="@style/usertext"
                            android:textColor="@color/gray"
                            android:text="昵称" />
                        <TextView
                            style="@style/usertext"
                            android:id="@+id/allperson_tv_nickname"
                            android:gravity="right"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    style="@style/wrap_layout" >
                    <!-- 上圆角-->
                    <LinearLayout
                        style="@style/top_layout">
                        <TextView style="@style/usertext"
                            android:textColor="@color/gray"
                            android:text="年龄" />
                        <TextView style="@style/usertext"
                            android:id="@+id/allperson_tv_age"
                            android:gravity="right"
                            />
                    </LinearLayout>
                    <View style="@style/bg_line"/>
                    <!-- 下圆角-->
                    <LinearLayout
                        style="@style/bottom_layout">
                        <TextView
                            style="@style/usertext"
                            android:textColor="@color/gray"
                            android:text="性别" />
                        <TextView
                            style="@style/usertext"
                            android:id="@+id/allperson_tv_gender"
                            android:gravity="right"
                            />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    style="@style/wrap_layout" >
                    <!-- 上圆角-->
                    <LinearLayout style="@style/top_layout">

                        <TextView
                            style="@style/usertext"
                            android:text="生日"
                            android:textColor="@color/gray" />

                        <TextView
                            android:id="@+id/allperson_tv_birthday"
                            style="@style/usertext"
                            android:gravity="right" />
                    </LinearLayout>

                    <View style="@style/bg_line"/>
                    <!-- 下圆角-->
                    <LinearLayout
                        style="@style/bottom_layout">
                        <TextView
                            style="@style/usertext"
                            android:textColor="@color/gray"
                            android:text="星座" />
                        <TextView
                            style="@style/usertext"
                            android:id="@+id/allperson_tv_xingZuo"
                            android:gravity="right"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/wrap_layout" >
                    <!-- 上圆角-->
                    <LinearLayout
                        style="@style/top_layout">
                        <TextView style="@style/usertext"
                            android:textColor="@color/gray"
                            android:text="身高" />
                        <TextView style="@style/usertext"
                            android:id="@+id/allperson_tv_height"
                            android:gravity="right"
                            />
                    </LinearLayout>
                    <View style="@style/bg_line"/>
                    <!-- 下圆角-->
                    <LinearLayout
                        style="@style/bottom_layout">
                        <TextView
                            style="@style/usertext"
                            android:textColor="@color/gray"
                            android:text="体重" />
                        <TextView
                            style="@style/usertext"
                            android:id="@+id/allperson_tv_weight"
                            android:gravity="right"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/wrap_layout" >
                    <!-- 上圆角-->
                    <LinearLayout
                        style="@style/top_layout">
                        <TextView style="@style/usertext"
                            android:textColor="@color/gray"
                            android:text="手机" />
                        <TextView style="@style/usertext"
                            android:id="@+id/allperson_tv_phone"
                            android:gravity="right"
                            />
                    </LinearLayout>
                    <View style="@style/bg_line"/>
                    <!-- 下圆角-->
                    <LinearLayout
                        style="@style/bottom_layout">
                        <TextView
                            style="@style/usertext"
                            android:textColor="@color/gray"
                            android:text="住址" />
                        <TextView
                            style="@style/usertext"
                            android:id="@+id/allperson_tv_address"
                            android:gravity="right"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/wrap_layout" >
                    <!-- 上圆角-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/top_layout">
                        <TextView style="@style/usertext"
                            android:textColor="@color/gray"
                            android:text="职业" />
                        <TextView
                            style="@style/usertext"
                            android:id="@+id/allperson_tv_job"
                            android:maxLength="45"
                            android:singleLine="false"
                            android:gravity="right"
                            />
                    </LinearLayout>
                    <View style="@style/bg_line"/>

                    <LinearLayout style="@style/bottom_layout">
                        <TextView
                            style="@style/usertext"
                            android:text="爱好"
                            android:textColor="@color/gray" />
                        <TextView
                            style="@style/usertext"
                            android:id="@+id/allperson_tv_habit"
                            android:maxLength="45"
                            android:singleLine="false"
                            android:gravity="right"/>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/wrap_layout">
                    <TextView
                        style="@style/usertext"
                        android:textColor="@color/gray"
                        android:text="个人签名" />
                    <TextView
                        style="@style/usertext"
                        android:id="@+id/allperson_tv_signature"
                        android:maxLength="45"
                        android:singleLine="false"
                        android:gravity="right"
                        />
                    <!-- 下圆角-->
                    <LinearLayout
                        style="@style/bottom_layout">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>