<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/btn_gray_pressed"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <ImageView
            android:id="@+id/zhanlang_img_back"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back01"
            android:layout_width="60dp"
            android:layout_height="25dp" />
        <TextView
            android:text="影片信息"
            android:textSize="20dp"
            android:textColor="#fffff1"
            android:layout_gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/starpost_tv_post"
            android:text=" "
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:textColor="#fffff1"
            android:layout_marginRight="4dp"
            android:layout_width="60dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ScrollView
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <LinearLayout
            android:id="@+id/moviedetails_yugao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:background="#474747"
            android:src="@drawable/yugaopian"
            />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#474747"
                >
            <View style="@style/bg_line"
                android:layout_width="20sp"
                android:layout_marginTop="60sp"/>
            </LinearLayout>
        <ImageView
            android:id="@+id/moviedetails_picture"
            android:layout_width="110sp"
            android:layout_height="150sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#474747">
            <TextView
                android:id="@+id/moviedetails_moviesname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/white"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/moviedetails_moviesscore"
                android:layout_marginTop="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/red"
                android:textSize="20sp"/>
            <View style="@style/bg_line"
                android:layout_marginTop="5sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="7sp"
                    android:id="@+id/moviedetails_movieslength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/moviedetails_moviestype"
                    android:layout_marginTop="7sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/moviedetails_moviestime"
                    android:layout_marginTop="7sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="15sp"/>
            </LinearLayout>


        </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/moviedetails_moviesmessge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"/>
                <TextView
                    android:id="@+id/moviedetails_moviesdetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />
                <View style="@style/bg_line"
                    android:layout_marginTop="10sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="导演："/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/moviedetails_director"
                        android:layout_marginTop="5sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       />
                </LinearLayout>

                <View style="@style/bg_line"
                    android:layout_marginTop="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="演员："/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="15sp"
                        android:id="@+id/moviedetails_actor"
                        android:layout_marginTop="5sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

                <View style="@style/bg_line"
                    android:layout_marginTop="15sp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:id="@+id/moviedetails_haibao"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="剧照/海报"
                    android:textSize="15sp"/>
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>
                <View style="@style/bg_line"
                    android:layout_marginTop="15sp"/>
                <LinearLayout
                    android:id="@+id/moviedetails_about"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="相关资讯"
                        android:textSize="15sp"/>
                    <ImageView style="@style/img_arrow"/>
                </LinearLayout>
                <View style="@style/bg_line"
                    android:layout_marginTop="15sp"/>
                <LinearLayout
                    android:id="@+id/moviedetails_paihang"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="票房排行"
                        android:textSize="15sp"/>
                    <ImageView style="@style/img_arrow"/>
                </LinearLayout>
                <View style="@style/bg_line"
                    android:layout_marginTop="15sp"/>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/moviedetails_tobuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="立即一键选座购票"
            android:background="@color/orangered"/>

    </LinearLayout>


</LinearLayout>