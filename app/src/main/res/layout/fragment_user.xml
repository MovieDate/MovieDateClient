<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBEBEB">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#EBEBEB"
            >

            <!-- 全圆角-->
            <LinearLayout
                android:id="@+id/fprofile_ll_myinfo"
                android:background="@drawable/single_layout_selector"
                android:orientation="horizontal"
                style="@style/wrap_layout"
                android:layout_height="100dp">
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="0dp"
                    android:layout_height="80dp" />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/fprofile_tv_name"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray"
                        android:textSize="21sp"
                        android:text="欢迎来到约影吧！"
                        style="@style/usertext"
                        />
                    <TextView
                        android:id="@+id/fprofile_tv_account"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        style="@style/usertext"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                style="@style/wrap_layout" >
                <!-- 上圆角-->
                <LinearLayout
                    android:id="@+id/fprofile_ll_mycollect"
                    style="@style/top_layout">
                    <TextView
                        style="@style/usertext"
                        android:text="我的收藏" />

                    <ImageView style="@style/img_arrow"/>
                </LinearLayout>
                <View style="@style/bg_line"/>
                <!-- 下圆角-->
                <LinearLayout
                    android:id="@+id/fprofile_ll_myyueying"
                    style="@style/bottom_layout">
                    <TextView
                        style="@style/usertext"
                        android:text="我的约影记录" />
                    <ImageView style="@style/img_arrow"/>
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                style="@style/wrap_layout" >
                <!-- 上圆角-->
                <LinearLayout
                    android:id="@+id/fprofile_ll_updatephone"
                    style="@style/top_layout">

                    <TextView
                        android:id="@+id/textView"
                        style="@style/usertext"
                        android:text="更换手机号" />

                    <ImageView style="@style/img_arrow"/>
                </LinearLayout>
                <View style="@style/bg_line"/>
                <!-- 下圆角-->
                <LinearLayout
                    android:id="@+id/fprofile_ll_updatepsw"
                    style="@style/bottom_layout">
                    <TextView
                        style="@style/usertext"
                        android:text="修改密码" />
                    <ImageView style="@style/img_arrow"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                style="@style/wrap_layout" >
                <!-- 上圆角-->
                <LinearLayout
                    android:id="@+id/fprofile_ll_setting"
                    style="@style/top_layout">
                    <TextView style="@style/usertext"
                        android:text="我的设置" />
                    <ImageView style="@style/img_arrow"/>
                </LinearLayout>
                <!-- 分割线 -->
                <View style="@style/bg_line"/>
                <LinearLayout
                    android:id="@+id/fprofile_ll_logout"
                    style="@style/mid_layout">
                    <TextView
                        style="@style/usertext"
                        android:text="切换账号" />
                    <ImageView style="@style/img_arrow"/>
                </LinearLayout>
                <View style="@style/bg_line"/>
                <!-- 下圆角-->
                <LinearLayout
                    android:id="@+id/fprofile_ll__finish"
                    style="@style/bottom_layout">
                    <TextView
                        style="@style/usertext"
                        android:text="退出系统" />
                    <ImageView style="@style/img_arrow"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>