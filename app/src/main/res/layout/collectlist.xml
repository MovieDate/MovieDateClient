<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/collectlist_tv_postid"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/collectlist_tv_personid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_toRightOf="@id/collectlist_tv_postid"/>
    <TextView
        android:id="@+id/collectlist_tv_collecttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_toRightOf="@id/collectlist_tv_postid"
        android:layout_below="@id/collectlist_tv_personid"
        android:layout_marginTop="20dp"/>

</LinearLayout>